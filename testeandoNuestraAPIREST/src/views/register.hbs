<div class='container my-5'>
  <div class='jumbotron'>

    <h1>REGISTER</h1>
    <br />
    <form
      class='form'
      action='/api/user/register'
      method='post'
      role='form'
      autocomplete='off'
    >

      <div class='form-group'>
        <input
          id='email'
          name='email'
          placeholder='email'
          class='form-control'
          type='email'
          required
        />
      </div>

      <div class='form-group'>
        <input
          id='password'
          name='password'
          placeholder='password'
          class='form-control'
          type='password'
          required
        />
      </div>

      <div class='form-group'>
        <input
          id='name'
          name='name'
          placeholder='nombre'
          class='form-control'
          type='text'
          required
        />
      </div>

      <div class='form-group'>
        <input
          id='address'
          name='address'
          placeholder='domicilio'
          class='form-control'
          type='text'
          required
        />
      </div>

      <div class='form-group'>
        <input
          id='countryCode'
          name='countryCode'
          placeholder='código del país'
          class='form-control'
          type='text'
          required
        />
      </div>

      <div class='form-group'>
        <input
          id='phone'
          name='phone'
          placeholder='teléfono'
          class='form-control'
          type='tel'
          required
        />
      </div>

      <div class='form-group'>
        <input
          id='age'
          name='age'
          placeholder='edad'
          class='form-control'
          type='text'
          required
        />
      </div>

      <div class='form-group'>
        <input class='btn btn-success my-3' type='submit' value='Register' />
      </div>
    </form>

    <hr />

    <div class='text-left'>
      <button class='btn btn-success my-3' onclick="location.href = '/login'">Ir
        a Login</button>
    </div>

  </div>
</div>